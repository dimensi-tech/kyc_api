<div class='form-container'>
  <div class="wrapper">
    <div class="inner">
      <div class="banner-holder">
        <div class="kyc-portal">
          <%= image_tag 'logo.svg' %>
          <h1>KYC PORTAL</h1>
          <p>New levels of certainty on your third parties, and the individuals behind them.</p>
        </div>
      </div>
      <div id='form-holder'>
        <% if params[:identity_id].present? %>
          <%= render 'passport', locals: { passport: @passport } %>
        <% else %>
          <%= render 'identity', locals: { identity: @identity } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
